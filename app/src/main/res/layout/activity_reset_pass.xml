<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.Seller_Register">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="314dp"
        android:layout_height="466dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.215">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="<Account Name>"
            android:fontFamily="@font/jost_bold"
            android:textColor="@color/green02"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/tf_NewPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/default_border"
            android:hint="New Password"
            android:paddingStart="16dp"
            android:layout_marginBottom="30dp"
            />

        <EditText
            android:id="@+id/tf_ConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/default_border"
            android:hint="Confirm Password"

            android:paddingStart="16dp"

            />
        <Button
            android:id="@+id/buttonConfirm"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bt_primary"
            android:fontFamily="@font/jost_medium"
            android:text="Confirm"
            android:textSize="16dp"
            android:textColor="@color/white"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="204dp"
        android:layout_height="171dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:srcCompat="@drawable/logo" />


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="360dp"
        android:layout_height="32dp"
        android:layout_marginTop="19dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"

            app:srcCompat="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/jost_bold"
            android:text="Reset Password"
            android:textColor="@color/green03"
            android:textSize="18dp" />

        <View
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>