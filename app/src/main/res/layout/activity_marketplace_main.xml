<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.marketplaceMain.marketplaceMain">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/green05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green02"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_weight="2"
                android:src="@drawable/ic_search_bar" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_cart" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_chat" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:src="@drawable/discount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView21">

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/mm_ads_active" />

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mm_adsbtn_inactive" />

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mm_adsbtn_inactive" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mm_adsbtn_inactive" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mm_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView21">

            <LinearLayout
                android:id="@+id/linearContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mm_menu_ic"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView21">

                <ImageView
                    android:id="@+id/imageView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mm_ic_offers" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearContainer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mm_menu_ic"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@+id/linearContainer"
                app:layout_constraintTop_toBottomOf="@+id/imageView21">

                <!-- Your existing ImageView 40 -->
                <ImageView
                    android:id="@+id/imageView40"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/mm_ic_groceries" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearContainer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mm_menu_ic"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@+id/linearContainer2"
                app:layout_constraintTop_toBottomOf="@+id/imageView21">

                <ImageView
                    android:id="@+id/imageView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mm_ic_fruits"
                    app:layout_constraintStart_toStartOf="@+id/imageView30"
                    app:layout_constraintTop_toTopOf="@+id/imageView30" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearContainer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mm_menu_ic"
                android:gravity="center"
                android:layout_marginStart="6dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/linearContainer3"
                app:layout_constraintTop_toBottomOf="@+id/imageView21">

                <ImageView
                    android:id="@+id/ic_veg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mm_ic_veg"
                    app:layout_constraintStart_toStartOf="@+id/imageView32"
                    app:layout_constraintTop_toTopOf="@+id/imageView32" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearContainer5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mm_menu_ic"
                android:gravity="center"
                android:layout_marginStart="6dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/linearContainer4"
                app:layout_constraintTop_toBottomOf="@+id/imageView21">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mm_ic_baked_goods"
                    app:layout_constraintStart_toStartOf="@+id/imageView34"
                    app:layout_constraintTop_toTopOf="@+id/imageView34" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearContainer6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mm_menu_ic"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/linearContainer5"
                app:layout_constraintTop_toBottomOf="@+id/imageView21">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mm_ic_meals"
                    app:layout_constraintStart_toStartOf="@+id/imageView36"
                    app:layout_constraintTop_toTopOf="@+id/imageView36" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearContainer7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <!-- Your existing TextView -->
            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:text="Selling Out"
                android:textColor="@color/black01"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Your existing ImageView -->
            <ImageView
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:layout_marginTop="1.5dp"
                android:background="@drawable/mm_so_ic" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="12dp"
            android:text="Bundle Deals"
            android:textColor="@color/black01"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_mm_so_container" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="Discounted Goods"
            android:textColor="@color/black01"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_mm_bd_container" />

        <ImageView
            android:id="@+id/imageView43"
            android:layout_width="19dp"
            android:layout_height="21dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/mm_gift_ic"
            app:layout_constraintStart_toEndOf="@+id/textView51"
            app:layout_constraintTop_toBottomOf="@+id/rv_mm_so_container" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mm_bd_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView43" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mm_so_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearContainer7" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mm_dg_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView52" />

        <ImageView
            android:id="@+id/imageView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/mm_dg_ic"
            app:layout_constraintStart_toEndOf="@+id/textView52"
            app:layout_constraintTop_toBottomOf="@+id/rv_mm_bd_container" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>